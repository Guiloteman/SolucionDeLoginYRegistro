
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @*<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">*@
    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body>
    <header class="header">
        <a href="#" class="logo">Dirección General de Catastro</a>
        @*<img src="https://pbs.twimg.com/profile_images/1083007523983163394/ahsIgsyK_400x400.jpg" alt="logo">*@
        <img src="~/Imagen/images.png" alt="logo">
        <a href="#" class="logo">Provincia de Tucumán</a>
    </header>

    <form action="@Url.Action("Login", "Acceso")" method="post">
        <h1 class="title">Acceso</h1>
        <label>
            <i class="fa-solid fa-user"></i>
            <input name="Correo" placeholder="correo" type="email" id="username" required>
        </label>

        <label>
            <i class="fa-solid fa-lock"></i>
            <input name="Clave" placeholder="contraseña" type="password" id="password" required>
        </label>

        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        }



        <button id="button">Acceder</button>
        <br />
        <br />
        <a href="@Url.Action("Registrar", "Acceso")" class="link">Registrarse</a>
    </form>



    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</body>
</html>